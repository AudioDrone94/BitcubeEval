@model IEnumerable<AssessmentTask.Models.Degree>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DegreeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DegreeDuration)
        </th>
        <th>
            Lecturer name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lecturer.Forenames)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DegreeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DegreeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DegreeID })
                |
                @Html.ActionLink("Students", "GetStudentsByDegree", "Students", new { degreeID = item.DegreeID }, null) |
                @Html.ActionLink("Courses", "GetCoursesByDegree", "Courses", new { degreeID = item.DegreeID }, null)
            </td>
        </tr>
    }

</table>
